@page
@model ClinicAppointment.Pages.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/Styles/Startpage.css" />
</head>
<body>
    <div class="container">
        <h2>Clinic Appointment Booking System</h2>

        @if (Model.IsAuthenticated)
        {
            <h1>Welcome To HomePage</h1>
            <ul>
                <li><a href="/Doctors">Doctors</a></li>
                <li><a href="/Patients">Patients</a></li>
                <li><a href="/Appointments">Appointments</a></li>
                <li><a href="/Logout" style="background-color: #dc3545;">Logout</a></li>
            </ul>
        }
        else
        {
            <div class="alert">
                You are not authenticated. <a class="login-link" href="/Login">Login</a>
            </div>
        }
    </div>
</body>
</html>
